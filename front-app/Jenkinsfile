pipeline {
    agent any

    stages {
        stage('Install pnpm') {
            steps {
                script {
                    sh 'curl -fsSL https://get.pnpm.io/install.sh | sh -'
                }
            }
        }
        stage('Install Dependencies') {
            steps {
                script {
                    sh 'pnpm install'
                }
            }
        }

        stage('Build') {
            steps {
                sh 'pnpm build'
            }
        }

        stage('Deploy') {
            steps {
                sh 'pm2 restart ecosystem.config.js'
            }
        }
    }
}
