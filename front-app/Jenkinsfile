pipeline {
    agent any

    stages {
        // stage('Checkout') {
        //     steps {
        //         git branch: 'front-main', url: 'git@github.com:your-repo.git'
        //     }
        // }

        stage('Install Dependencies') {
            steps {
                script {
                    sh 'pnpm install'
                }
            }
        }

        stage('Build') {
            steps {
                sh 'pnpm build'
            }
        }

        stage('Deploy') {
            steps {
                sh 'pm2 restart ecosystem.config.js'
            }
        }
    }
}
