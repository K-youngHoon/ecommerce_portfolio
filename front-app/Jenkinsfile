pipeline {
    agent any

    environment {
        SHELL = '/bin/bash'  // 셸 명시적 설정
        PNPM_HOME = '/var/jenkins_home/.local/share/pnpm' // pnpm 설치 경로 설정
        PATH = "$PNPM_HOME:$PATH" 
    }
    stages {
        stage('Install pnpm') {
            steps {
                script {
                    // `bash`로 설치 명령 실행
                    sh '/bin/bash -c "curl -fsSL https://get.pnpm.io/install.sh | bash"'
                }
            }
        }
        stage('Install Dependencies') {
            steps {
                script {
                    sh 'pnpm install'
                }
            }
        }

        stage('Build') {
            steps {
                sh 'pnpm build'
            }
        }

        stage('Deploy') {
            steps {
                sh 'pm2 restart ecosystem.config.js'
            }
        }
    }
}
